<%- include('../layouts/header.ejs') %>
<% if (messages.error) { %>
    <p style = "color: red"><%- messages.error %></p>
<% } %>
<% if (messages.success) { %>
    <p style = "color: green"><%- messages.success %></p>
<% } %>
<div class="container mt-5 mr-5">
    <div class="card mt-3 ml-5 col-9 text-center">
        <div class="row mt-3 ml-5">
            <div class=" ml-5 mt-5">
                <form class="ml-5" action="/admin/edit/<%= id %>" method="post" name="form1" enctype="multipart/form-data">
                    <table class="ml-5" width="25% " npnborder="0">
                        <tr>
                            <td colspan="2">Sampul</td>
                            <td class="col-1"><input class="ml-5" type="file" name="sampul" value="<%= sampul %>" /></td>
                        </tr>
                        <tr>
                            <td colspan="2">Judul</td>
                            <td><input class="form-control ml-5 col-10" type="text" name="judul" value="<%= judul %>" /></td>
                        </tr>
                        <tr>
                            <td colspan="2">Nama Penerbit</td>
                            <td><input class="form-control col-10 ml-5" type="text" name="namapenerbit" value="<%= namapenerbit %>" /></td>
                        </tr>
                        <tr>
                            <td colspan="2">Tahun Terbit</td>
                            <td ><input class="form-control ml-5 col-10" type="text" name="tahunterbit" value="<%= tahunterbit %>" /></td>
                        </tr>
                        <tr>
                            <td colspan="2" style="width: 200px;">Total Halaman</td>
                            <td><input class="form-control ml-5 col-10" type="text" name="jumlahhalaman" value="<%= jumlahhalaman %>" /></td>
                        </tr>
                            <div class="input">
                                <tr>
                                    <td class="text-center ml-5 mt-5" ><input class="btn btn-primary mt-5 pr-5 pl-5 " type="hidden" name="_method" value="PUT" /></td>
                                    <td><input class="btn btn-primary text-center mt-5" type="submit" name="Submit" value="SIMPAN" /></td>
                                </tr>
                            </div>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>